<!DOCTYPE html>
<html>

<head>
    <title>Users List</title>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    button {
        background-color: #ff4d4d;
        color: white;
        padding: 8px 12px;
        border: none;
        cursor: pointer;
    }

    button:hover {
        background-color: #cc0000;
    }
</style>

<body>
    <h1>Users List</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Delete User</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <form method="post" action="/deleteUser">
                            <input type="hidden" name="userId" value="<%= user._id %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>
<script src="/"></script>

</html>